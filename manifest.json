{
  "name": "ChatGPT Quicklink",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Quicklink for ChatGPT.",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "host_permissions": ["*://chat.openai.com/chat*"],
  "permissions": ["scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ChatGPT Quicklink",
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  }
}
